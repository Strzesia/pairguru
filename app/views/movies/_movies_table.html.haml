%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          = image_tag(movie[:poster_url], width: '100%')
        %td
          %h4
            = link_to movie[:title], movie_path(movie[:id])
            = "#{movie[:rating]}/10"
          %p
            %strong
              = link_to movie[:genre][:name], movies_genre_path(movie[:genre][:id])
            = ' (' + movie[:released_at].to_s + ')'
          %p= movie[:description]
          %p= movie[:plot]
